<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="home">PocketRace</a>
        <button title="Navigation menu" class="navbar-toggle btn" @onclick="()=>SidebarClose()">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
</div>

<div class="nav-scrollable">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/home" @onclick="() => SidebarClose()" Match="NavLinkMatch.All">
                <i class="bi bi-house"></i>Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/races" @onclick="() => SidebarClose()">
                <i class="bi bi-journals"></i>All Races
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/timer" @onclick="() => SidebarClose()">
                <i class="bi bi-stopwatch"></i>Time A Race
            </NavLink>
        </div>
    </nav>
</div>

@code {
    [Parameter] public EventCallback<string> SidebarToggle {get; set;}

    private async Task SidebarClose()
    {
        if(SidebarToggle.HasDelegate)
            await SidebarToggle.InvokeAsync("");
    }
}
